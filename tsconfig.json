{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators" : true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": [ "src/**/*.ts", "src/**/*.js", "test/**/*.ts", "scripts/**/*.ts" ]
}
